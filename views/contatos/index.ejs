<% include ../shared/header %>

<header class="row-fluid text-center">
	<h2>Ntalk - Agenda de Contatos(<%= usuario.nome %>)</h2>
</header>
<section class="row-fluid">
	<section class="span12">
		<form action="/contato" method="post">
			<input type="text" name="contato[nome]" placeholder="Nome" ><br>
			<input type="text" name="contato[email]" placeholder="E-mail" ><br>
			<button type="submit" class="btn btn-primary">Cadastrar</button>
		</form>

		<table class="table well">
			<thead>
				<tr>
					<th>Nome</th>
					<th>Email</th>
					<th>Ação</th>
				</tr>
			</thead>
			<% contatos.forEach(function(contato, index){ %>
				<tbody>
					<tr>
						<td><%= contato.nome %></td>
						<td><%= contato.email %></td>
						<td>
							<a href="/contato/<%= index %>">Detalhes</a>
						</td>
					</tr>
				</tbody>
			<% }) %>
		</table>
	</section>
</section>

<% include ../shared/exit %>
<% include ../shared/footer %>